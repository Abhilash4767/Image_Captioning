{
  "name": "Streamlit Gemini App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "updateContentCommand": "sudo apt-get update && pip install --upgrade pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",

  "postAttachCommand": "streamlit run app.py --server.port=8501 --server.enableCORS false --server.enableXsrfProtection false",

  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [8501],

  "remoteEnv": {
    "GOOGLE_API_KEY": "${localEnv:GOOGLE_API_KEY}"
  }
}
